<Page
    x:Class="DrawingApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:DrawingApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Canvas x:Name="_canvas" Background="#FFFFFFA0" Margin="0,150,0,0"/>
        <Button x:Name="UseRectangleButton" Content="Rectangle" Margin="10,32,0,0" VerticalAlignment="Top" Height="92" Width="320" FontSize="48" Background="#FF3F3F3F" />
        <Button x:Name="UseLineButon" Content="Line" Margin="360,32,0,0" VerticalAlignment="Top" Height="92" Width="320" FontSize="48" Background="#FF3F3F3F" />
        <Button x:Name="UseEllipseButton" Content="Ellipse" Margin="712,32,0,0" VerticalAlignment="Top" Height="92" Width="320" FontSize="48" Background="#FF3F3F3F" />
        <Button x:Name="ClearCanvasButton" Content="Clear" Margin="1061,30,0,0" VerticalAlignment="Top" Height="92" Width="320" FontSize="48" Background="#FF3F3F3F" />

    </Grid>
</Page>
